{
  "name": "XO MQTT Updater",
  "version": "1.1.4",
  "slug": "xo_mqtt_updater",
  "description": "Publikuje statistiky jednoho hosta XO p≈ôes MQTT do Home Assistant (token-only)",
  "arch": ["amd64", "armv7", "aarch64"],
  "startup": "application",
  "boot": "auto",
  "host_network": true,
  "options": {
    "xo_url": "https://xo.local",
    "xo_token": "xxxxxxxxxxxxxxxxxxxxxxxxxxxx",
    "host_uuid": "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx",
    "host_name": "MyHost",
    "verify_ssl": false,
    "mqtt_host": "core-mosquitto",
    "mqtt_port": 1883,
    "mqtt_user": "",
    "mqtt_password": "",
    "update_interval": 30
  },
  "schema": {
    "xo_url": "str",
    "xo_token": "str",
    "host_uuid": "str",
    "host_name": "str",
    "verify_ssl": "bool",
    "mqtt_host": "str",
    "mqtt_port": "int",
    "mqtt_user": "str",
    "mqtt_password": "str",
    "update_interval": "int"
  }
}
